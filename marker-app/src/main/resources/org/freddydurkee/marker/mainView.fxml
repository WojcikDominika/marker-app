<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import org.freddydurkee.marker.view.MarkerableImageView?>
<?import org.freddydurkee.marker.view.MarkerListView?>
<HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="420.0" minWidth="850.0" nodeOrientation="LEFT_TO_RIGHT"
      styleClass="background-dark-gray" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.freddydurkee.marker.MainViewController">
    <children>
        <AnchorPane minHeight="380.0" HBox.hgrow="SOMETIMES">
            <children>
                <VBox id="sidebar" alignment="CENTER" spacing="10.0" styleClass="nav-bar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                      AnchorPane.topAnchor="0.0">
                    <children>
                        <Button fx:id="loadImageBtn" mnemonicParsing="false" onMouseClicked="#openFileChooser" text="Image">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </Button>
                        <Button id="markersBtn" mnemonicParsing="false" text="Markers">
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" text="Button">
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                        </Button>
                    </children>
                    <padding>
                        <Insets left="5.0" right="5.0"/>
                    </padding>
                </VBox>
                <ScrollPane id="scrollable" fitToHeight="true" fitToWidth="true" layoutX="69.0" minWidth="100.0" style="-fx-background-color: transparent;"
                            AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <content>
                        <MarkerListView fx:id="markersList" alignment="TOP_CENTER" minWidth="90.0" spacing="5.0" styleClass="marker-list">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </MarkerListView>
                    </content>
                </ScrollPane>
            </children>
        </AnchorPane>
        <GridPane fx:id="grid" alignment="CENTER" hgap="5.0" minHeight="400.0" minWidth="600.0" vgap="5.0" HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="1.7976931348623157E308" minWidth="10.0" percentWidth="50.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="1.7976931348623157E308" minWidth="10.0" percentWidth="50.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" percentHeight="50.0" valignment="CENTER" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" percentHeight="50.0" valignment="CENTER" vgrow="NEVER"/>
            </rowConstraints>
            <children>
                <MarkerableImageView fx:id="imgContainer1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                    <imageView>
                        <ImageView fx:id="imageView1" onMouseClicked="#onMarkerableImageClickedAddMarker" cache="true" cacheHint="SCALE" pickOnBounds="true"
                                   preserveRatio="true"/>
                    </imageView>
                </MarkerableImageView>
                <MarkerableImageView fx:id="imgContainer2" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                    <imageView>
                        <ImageView fx:id="imageView2" onMouseClicked="#onMarkerableImageClickedAddMarker" pickOnBounds="true" preserveRatio="true"/>
                    </imageView>
                </MarkerableImageView>
                <MarkerableImageView fx:id="imgContainer3" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <imageView>
                        <ImageView fx:id="imageView3" onMouseClicked="#onMarkerableImageClickedAddMarker" pickOnBounds="true" preserveRatio="true"/>
                    </imageView>
                </MarkerableImageView>
                <MarkerableImageView fx:id="imgContainer4" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                                     GridPane.valignment="CENTER">
                    <imageView>
                        <ImageView fx:id="imageView4" onMouseClicked="#onMarkerableImageClickedAddMarker" pickOnBounds="true" preserveRatio="true"/>
                    </imageView>
                </MarkerableImageView>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </GridPane>
    </children>
</HBox>
